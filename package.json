{
  "name": "meteor-auth",
  "version": "0.2.0-ts",
  "description": "A reusable composer to implement authentication for Mantra applications",
  "main": "./dist/index.js",
  "scripts": {
    "test": "npm run-script compile && NODE_ENV=test ./node_modules/.bin/_mocha test/*-test.js",
    "compile": "./node_modules/.bin/babel lib/ -d dist/",
    "prepare": "npm run-script compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sungwoncho/meteor-auth.git"
  },
  "keywords": [
    "mantra",
